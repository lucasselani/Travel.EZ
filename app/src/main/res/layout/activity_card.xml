<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <RelativeLayout
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_menu_manage"/>
        <TextView
            android:id="@+id/txLocal"
            android:text="LOCAL"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            style="@android:style/Theme.Material.Light"
            android:textSize="20sp"
            android:textColor="@android:color/secondary_text_light"
            android:fontFamily="sans-serif-light"/>
        <TextView
            android:id="@+id/txType"
            android:text="TYPE"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/txAgency"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="5dp"
            style="@android:style/Theme.Material.Light"
            android:textStyle="bold"
            android:textColor="@android:color/secondary_text_light"
            android:fontFamily="sans-serif-thin"/>
        <TextView
            android:id="@+id/txDuration"
            android:text="DURATION"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/txPrice"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="5dp"
            style="@android:style/Theme.Material.Light"
            android:textColor="@android:color/secondary_text_light"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-thin"/>
        <TextView
            android:id="@+id/txPrice"
            android:text="PRICE"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/txLocal"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="5dp"
            style="@android:style/Theme.Material.Light"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_light"
            android:textSize="20sp"
            android:fontFamily="sans-serif-thin"/>
        <TextView
            android:id="@+id/txAgency"
            android:text="AGENCY"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/txDuration"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="5dp"
            style="@android:style/Theme.Material.Light"
            android:textStyle="bold"
            android:textColor="@android:color/secondary_text_light"
            android:fontFamily="sans-serif-thin"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>